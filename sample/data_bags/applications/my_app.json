{
  "id": "my_app",
  "production": {
    "databases": [
      {
        "name": "my_app",
        "username": "my_app",
        "password": "my_apppass",
        "host": "172.17.2.1",
        "type": "mysql"
      },
      {
        "name": "my_app2",
        "username": "my_app2",
        "password": "my_app2pass",
        "type": "mysql"
      },
      {
        "name": "mongo",
        "username": "mongodbuser",
        "password": "mongopass",
        "type": "mongodb"
      }
    ],
    "backup": {
      "archive": {
        "root": "/opt/applications/my_app",
        "add": [
          "/app/",
          "/log"
        ],
        "use_sudo": false
      },
      "schedule": {
        "hour": "3"
      },
      "databases": [
        "my_app",
        "my_app2"
      ],
      "compress": true,
      "encryptor": "enc1",
      "storages": [
        {
          "id": "s3",
          "path": "my_app",
          "keep": 30
        },
        {
          "id": "otro_s3",
          "path": "backups",
          "keep": 60
        },
        {
          "id": "sftp"
        },
        {
          "id": "scp1"
        },
        {
          "id": "dropbox"
        }
      ],
      "syncers": [
        {
          "id": "rsync1",
          "directory": {
            "add": ["/home/vagrant/prueba", "/var/log"],
            "exclude": ["nova/"]
          }
        }
      ],
      "mail": {
        "mail_id": "mail_app",
        "on_success": "false",
        "from": "my-app-backups@example.local",
        "to": "my-app-group@example.local"
      }
    }
  }
}
